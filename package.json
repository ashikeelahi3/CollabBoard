{
  "name": "collabboard",
  "version": "1.0.0",
  "type": "module",
  "description": "Real-time Kanban collaboration board",
  "main": "server/server.js",
  "scripts": {
    "dev": "nodemon server/server.js",
    "start": "node server/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "client": "live-server src --port=8080 --no-browser",
    "dev:full": "concurrently --kill-others \"npm run dev\" \"npm run client\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "live-server": "^1.2.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^7.0.12",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2"
  },
  "keywords": [
    "kanban",
    "collaboration",
    "real-time",
    "socket.io"
  ],
  "author": "Your Name",
  "license": "MIT"
}